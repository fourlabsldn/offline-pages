<div class="jumbotron">
  <h1>Contacts</h1>
  <p class="lead">Offline Website - Content should be displayed even if there is no connection</p>
  <p><a class="btn btn-lg btn-success" role="button">Big button</a></p>
</div>


<table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>

<script>
  fetch('/api/contacts')
  .then(r => r.json())
  .then(r => {
    const tableRows = r.contacts.map(p => `
      <tr>
        <td><img src="${p.image}" alt="" style="max-width: 50px"></td>
        <th scope="row">${p.name}</th>
      </tr>
    `);

    document.querySelector('tbody').innerHTML = tableRows.join('');
  });
</script>
